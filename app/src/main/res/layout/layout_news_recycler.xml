<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="20dp"
        app:cardCornerRadius="10dp"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_news_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="5sp"
                android:text="IEEE DTU Orientation"
                android:layout_marginTop="5sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_news_date"
                android:text="Date"
                android:paddingLeft="5sp"
                android:textSize="12sp"
                android:layout_marginLeft="5sp"/>


            <ImageView
                android:id="@+id/iv_news_im"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="fitXY"
                android:visibility="visible"
                android:padding="10dp"
                android:src="@drawable/eg"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:layout_margin="2sp"
                android:background="#8b8b8b"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="IEEE DTU is organizing its orientation on 8th August, 2017."
                    android:id="@+id/tv_news_body"
                    android:padding="5dp"
                    android:layout_margin="5dp"/>

            </android.support.v7.widget.CardView>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>